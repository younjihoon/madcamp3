<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 유저 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F0F0F0"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <!-- 유저 아이콘 -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_tomato"
                android:contentDescription="User Icon"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop" />

            <!-- 유저 이름 및 이메일 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="honggildong@example.com"
                    android:textSize="14sp"
                    android:textColor="#888888" />
            </LinearLayout>

            <!-- 탈퇴 및 로그아웃 버튼 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/delete_account_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="탈퇴하기"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:elevation="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 제목 -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신의 식습관 점수는?"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- 점수 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"
            android:padding="32dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65점"
                android:textSize="48sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="엄마 님에게 연락가기까지\n5점 남았습니다."
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- 하단 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginBottom="16dp" />

        <!-- 하단 상세 보기 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자세히보기"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:orientation="vertical"
            android:elevation="4dp"
            android:backgroundTint="#E5E5E5"
            android:layout_marginBottom="16dp">

            <!-- 분석 결과 제목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입력된 식품:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <!-- 그래프 영역 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_fresh"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp" />

            <!-- 분석 결과 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분석 결과:"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="채소: 0개 항목"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="과일: 0개 항목"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="단백질: 0개 항목"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="통곡물: 0개 항목"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가공식품: 0개 항목"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
