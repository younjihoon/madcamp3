<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EFEB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 사용자 프로필 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_score_card">

            <!-- 프로필 이미지 -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_cooking"
                android:contentDescription="User Profile"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                />

            <!-- 사용자 정보 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="honggildong@example.com"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                     />

                <!-- 버튼 영역 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/logout_button"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="로그아웃"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/button_background"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/delete_account_button"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="탈퇴하기"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/button_background" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 점수 제목 -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="당신의 식습관 점수는?"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium" />

        <!-- 점수 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_score_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50점"
                android:textSize="48sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💡 50점 이하이면\n엄마 님께 문자가 발송됩니다."
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- 상세 정보 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자세히보기"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium" />

        <!-- 상세 정보 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- 입력된 식품 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입력된 식품:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium" />

            <!-- 그래프 영역 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#F8F8F8"
                android:layout_marginBottom="20dp">

                <!-- 그래프는 실제 구현 시 차트 라이브러리 사용 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:padding="16dp"/>
            </FrameLayout>

            <!-- 분석 결과 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분석 결과:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium" />

            <!-- 분석 결과 리스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:spacing="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="채소: 0개 항목"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="과일: 0개 항목"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="단백질: 0개 항목"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="통곡물: 0개 항목"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가공식품: 0개 항목"
                    android:textSize="14sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>